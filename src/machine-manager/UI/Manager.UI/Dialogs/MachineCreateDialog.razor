@using Manager.Shared.Models.DTOs

<MudDialog>
    <DialogContent>
        <EditForm Model="@_machine">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <MudItem xs="10">
                <MudTextField @bind-Value="_machine.Name" Label="Ime stroja" HelperText="Unesite ime stroja" Variant="Variant.Outlined" />
            </MudItem>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Ok">Dodaj</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private MachineCreateDTO _machine { get; set; }

    protected override void OnInitialized()
    {
        _machine = new();
    }

    private void Ok()
    {
        MudDialog.Close(DialogResult.Ok(new MachineCreateDTO { Name = _machine.Name }));
    }
}

